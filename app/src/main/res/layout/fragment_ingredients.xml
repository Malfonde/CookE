<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.izik.recipebook.IngredientsFragment"
    android:textColor="#666666">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/ingredients_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:dividerPadding="10dp">

            <ImageButton
                android:id="@+id/addToIngrediantsList_Button"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/add_white"
             />
            <ImageButton
                android:id="@+id/removeFromIngrediantsList_Button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/remove_white"
               />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>
